{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Event list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Removedat</th>
                <th>Ishidden</th>
                <th>Title</th>
                <th>Startat</th>
                <th>Endat</th>
                <th>Thumbnail</th>
                <th>Headerpicture</th>
                <th>Content</th>
                <th>Capacity</th>
                <th>Maxplacesforuser</th>
                <th>Fundationid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('events_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.removedAt %}{{ entity.removedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.isHidden }}</td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.startAt %}{{ entity.startAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.endAt %}{{ entity.endAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.thumbnail }}</td>
                <td>{{ entity.headerPicture }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.capacity }}</td>
                <td>{{ entity.maxPlacesForUser }}</td>
                <td>{{ entity.fundationId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('events_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('events_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('events_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
