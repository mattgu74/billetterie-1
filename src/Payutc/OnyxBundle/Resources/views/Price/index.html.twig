{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Price list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Removedat</th>
                <th>Ishidden</th>
                <th>Startat</th>
                <th>Endat</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Isnominative</th>
                <th>Capacity</th>
                <th>Maxplacesforuser</th>
                <th>Isuniqueforuser</th>
                <th>Payutcid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('prices_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.removedAt %}{{ entity.removedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.isHidden }}</td>
                <td>{% if entity.startAt %}{{ entity.startAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.endAt %}{{ entity.endAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.isNominative }}</td>
                <td>{{ entity.capacity }}</td>
                <td>{{ entity.maxPlacesForUser }}</td>
                <td>{{ entity.isUniqueForUser }}</td>
                <td>{{ entity.payutcId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('prices_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('prices_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('prices_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
